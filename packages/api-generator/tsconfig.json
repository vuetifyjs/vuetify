{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": false,
    "module": "preserve",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": [
        "../vuetify/src/*"
      ]
    },
  },
  "include": [
    "./src/**/*.ts",
    "./src/locale/**/*.json",
    "./templates/tmp/*"
  ],
}
