@import "../../stylus/bootstrap"
@import "../../stylus/theme"

v-feature-discovery($material)
  color: $material.text.primary
  background-color: $material.app-bar

theme(v-feature-discovery, "v-feature-discovery")

.v-feature-discovery
  overflow: hidden
  transition: $primary-transition
  position: fixed
  height: 400px
  width: 400px
  z-index: 10

  &:not(.v-feature-discovery--flat)
    elevation(4)

  &--active
    transform: translate3d(0, 0, 0) !important

  &--top-left
    transform: translate3d(-100%, -100%, 0)
    border-radius: 0 0 100% 0
    top: 0
    left: 0

  &--top-right
    transform: translate3d(100%, -100%, 0)
    border-radius: 0 0 0 100%
    top: 0
    right: 0

  &--bottom-left
    transform: translate3d(-100%, 100%, 0)
    border-radius: 0 100% 0 0
    bottom: 0
    left: 0

  &--bottom-right
    transform: translate3d(100%, 100%, 0)
    border-radius: 100% 0 0 0
    bottom: 0
    right: 0
