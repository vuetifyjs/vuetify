@import '../bootstrap'
@import '../theme'

/* Themes */
icon($material)
  color: $material.icons.active

  &.icon--disabled:not(.input-group__append-icon)
    color: $material.icons.inactive !important

theme(icon, "icon")

.icon
  width: 1em
  height: 1em
  display: inline-flex !important
  align-items: center
  justify-content: center
  transition: $primary-transition
  font-size: 24px
  line-height: 1

  &.icon--disabled
    cursor: default

  svg
    fill: currentColor
    width: 1em
    height: 1em
