.chip
  background: $chip-background
  border: $chip-border
  border-radius: $chip-border-radius
  display: inline-flex
  align-items: center
  justify-content: space-between
  font-size: $chip-font-size
  padding: $chip-padding
  min-height: $chip-min-height
  
  &:active
    background: $chip-background-active
    
  &--label
    border-radius: $chip-label-border-radius
  
  &--outline
    background: $chip-outline-background
    color: $chip-outline-color
    
  &--small
    min-height: $chip-small-min-height
    padding: $chip-small-padding
    
  &__close
    color: inherit
    display: flex
    align-items: center
    text-decoration: none
    
    .icon
      color: inherit
    
  .icon
    font-size: $chip-icon-font-size
    
    &--left
      margin-left: -.6rem
      margin-right: 1rem
      
    &--right
      margin-left: 1rem
      margin-right: -.6rem