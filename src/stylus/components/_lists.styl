@import '../bootstrap'
@import '../theme'

/* Themes */
v-list($material)
  background: $material.cards
  color: $material.text.primary

theme(v-list, "v-list")

.v-list
  padding: 8px 0

.v-list__item
  align-items: stretch
  display: flex
  flex: 1 1
  min-height: 48px
  padding: 0 16px

  .v-avatar
    justify-content: flex-start

  &__action
    align-self: center
    padding: 12px 0

    // Remove all margins when used
    // in an item action. If user
    // wants this they can not
    // use this component
    .v-input,
    .v-input__control,
    .v-input__slot,
    .v-input--selection-controls__input
      margin: 0

    .v-input
      padding: 0

      .v-messages
        display: none

    &--right
      margin-left: 32px

  &__avatar
    align-self: center
    margin-bottom: 16px
    margin-top: 16px

    &--left
      margin-right: 16px

    &--right
      margin-left: 16px

  &__content
    align-items: center
    display: flex
    flex-wrap: wrap
    flex: 1 1 auto
    padding: 16px 0

    > *
      line-height: 1
      flex: 1 0 100%

  &__icon
    align-self: flex-start
    margin: 16px 0

  &__action,
  &__icon
    &--left
      margin-right: 32px

  &__action,
  &__avatar,
  &__icon
    display: inline-flex

  &--two-line
    min-height: 64px

    .v-list__item__icon
      margin-bottom: 32px

  &--three-line
    min-height: 88px

    .v-list__item__avatar,
    .v-list__item__action
      align-self: flex-start
