.menu
  display: inline-block
  position: relative
  vertical-align: middle
  
  &--disabled
    cursor: not-allowed
    
    .menu__activator
      cursor: not-allowed
  
  &__activator
    align-items: center
    cursor: pointer
    position: relative
  
  &__content
    position: absolute
    display: inline-block
    border-radius: 2px
    overflow-y: auto
    overflow-x: hidden
    z-index: 4
    elevation(8)

  &-transition
    &-enter      
      .list__tile
        min-width: 0
        transition-delay: .3s
        opacity: 0
        transform: translateY(-15px)
        pointer-events: none
      
    &-enter-to
      .list__tile
        pointer-events: auto
        opacity: 1
      
    &-leave-to
      transform: translateY(-10px)
        
    &-enter, &-leave-to
      opacity: 0
      
    &-enter-to, &-leave
      opacity: 1
      
    &-enter-active, &-leave-active
      transition: all .4s $transition.swing
