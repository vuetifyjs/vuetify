@import '../bootstrap'
@import '../browsers'

.content
  flex: 1 1 auto
  max-width: 100%
  transition: .2s padding $transition.fast-out-slow-in
  will-change: padding

  &--wrap
    flex: 1 0 auto
    display: flex
    max-width: 100%

+firefox()
  @media print
    .content
      &--wrap
        display: block
