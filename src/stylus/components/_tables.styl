@import '../bootstrap'
@import '../theme'

/* Theme */
v-table($material)
  background-color: $material.cards
  color: $material.text.primary

  .v-table__header
    .v-row
      &:first-child
        border-bottom: 1px solid rgba($material.fg-color, $material.divider-percent)

    .v-head
      color: rgba($material.text-color, $material.secondary-text-percent)

  .v-table__body
    .v-row
      &:not(:last-child)
        border-bottom: 1px solid rgba($material.fg-color, $material.divider-percent)

      &[active]
        background: $material.table.active

      &:hover:not(.datatable__expand-row)
        background: $material.table.hover

  .v-table__footer
    .v-row
      border-top: 1px solid rgba($material.fg-color, $material.divider-percent)

theme(v-table, "v-table")

.v-table
  border-radius: 2px
  border-collapse: collapse
  border-spacing: 0
  width: 100%
  max-width: 100%

  &__overflow
    width: 100%
    overflow-x: auto
    overflow-y: hidden

  .v-table__header, .v-table__body
    .v-cell, .v-head
      &:not(:nth-child(1)), &:first-child
        padding: 0 24px

  .v-table__header
    .v-row
      height: 56px

    .v-head
      font-weight: 500
      font-size: 12px
      transition: .3s $transition.swing
      white-space: nowrap
      user-select: none

      &.sortable
        pointer-events: auto

      > div
        width: 100%

  .v-table__body
    .v-row
      transition: background $primary-transition
      will-change: background

    .v-cell, .v-head
      height: 48px

    .v-cell
      font-weight: 400
      font-size: 13px

  .input-group--selection-controls
    padding: 0

    .input-group__details
      display: none

    &.checkbox
      .v-icon
        left: 50%
        transform: translateX(-50%)

      .input-group--selection-controls__ripple
        left: 50%
        transform: translate(-50%, -50%)

  .v-table__footer
    .v-row
      height: 48px
      .v-cell
        padding: 0 24px
