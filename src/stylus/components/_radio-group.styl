@import '../bootstrap'
@import '../theme'

radiogroup($material)
  .input-group--selection-controls
    //

theme(radiogroup, "radio-group")

.v-input--radio-group
  &__input
    display: flex

  &--row
    .v-input--radio-group__input
      flex-direction: row
      flex-wrap: wrap

  &--column
    .v-input--radio-group__input
      flex-direction: column

  .v-radio:not(:last-child)
    margin-bottom: 8px
