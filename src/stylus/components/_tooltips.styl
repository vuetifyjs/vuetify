@import '../bootstrap'

.tooltip
  position: relative
  
  &__content
    background: $grey.darken-2
    border-radius: 2px
    color: #FFFFFF
    content: attr(data-tooltip)
    font-size: 12px
    display: inline-block
    padding: 5px 8px
    position: absolute
    pointer-events: none
    text-transform: initial
    transition: .15s $transition.swing
    width: auto
    elevation(2)
    
  @media $display-breakpoints.sm-and-down
    .tooltip__content
      padding: 10px 16px