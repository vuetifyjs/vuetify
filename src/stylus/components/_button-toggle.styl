.btn-toggle
  display: inline-flex
  border-radius: 2px
  transition: $primary-transition
  will-change: background, box-shadow

  .btn
    justify-content: center
    min-width: auto
    width: auto
    padding: 0 8px
    margin: 0
    opacity: .4
    border-radius: 0

    &:not(:last-child)
      border-right: 1px solid transparent

    &:after
      display: none

    &[data-selected]
      opacity: 1
      
    &__content
      padding: 0

    span + .icon
      font-size: initial
      margin-left: 10px

  &--selected
    elevation(2)
