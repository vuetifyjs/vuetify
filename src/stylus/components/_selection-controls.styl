/** Input */
.input-group.input-group--selection-controls
  display: flex

  .icon
    cursor: pointer
    position: absolute
    left: 0
    user-select: none
    transition: .3s $transition.ease-in-out

  .input-group__details:before, .input-group__details:after
    display: none

  .input-group__input
    color: inherit
    width: 100%
    position: relative

    // Needed for safari
    .icon
      align-self: center
      height: 30px
      margin: auto

/** Label */
.input-group--selection-controls label
  cursor: pointer
  margin-left: 32px
  pointer-events: auto
  position: absolute
  left: 0
  user-select: none
  z-index: 1
  pointer-events: all

.input-group--selection-controls__ripple
  border-radius: 50%
  height: 48px
  width: 48px
  cursor: pointer
  position: absolute
  transform: translate3d(-12px, -50%, 0)
  transform-origin: center center
  top: 50%
  left: 0

  &:before
    content: ''
    position: absolute
    width: 36px
    height: 36px
    background: currentColor
    border-radius: 50%
    left: 50%
    top: 50%
    transform: translate3d(-50%, -50%, 0) scale(.3)
    opacity: 0
    transition: $ripple-animation-transition
    transform-origin: center center
