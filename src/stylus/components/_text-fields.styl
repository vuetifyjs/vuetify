@import '../bootstrap'
@import '../theme'

v-text-field($material)
  .v-input__slot:before
    background-color: $material.input-bottom-line

  &:not(.v-input--has-state)
    &:hover
      .v-input__slot:before
        background-color: $material.text.primary

  &.v-input--is-disabled
    .v-input__slot:before
      background-color: transparent
      background-image: linear-gradient(
        to right,
        $material.text.disabled 0,
        $material.text.disabled 33%,
        transparent 0
      )

  &__prefix,
  &__suffix
    color: $material.text.secondary

  &--solo
    background: $material.cards

  &--solo-inverted.v-text-field--solo
    background: rgba($material.inputs.solo-inverted)

    &.v-input--is-focused
      background: rgba($material.inputs.solo-inverted-focused)
      .v-label,
      input
        color: $material.inputs.solo-inverted-focused-text

  &--box
    .v-input__slot
      background: $material.text-fields.box

    &:not(.v-input--is-focused)
      .v-input__slot
        &:hover
          background: $material.text-fields.box-hover

  &--outline
    border: 2px solid $material.text.secondary

    &:hover
      border: 2px solid $material.text.primary

v-text-field-rtl()
  .v-label
    transform-origin: top right

  &--enclosed
    .v-input__append-outer
      margin-left: 0
      margin-right: 16px

    .v-input__prepend-outer
      margin-left: 16px
      margin-right: 0

  &--reverse
    input
      text-align: left

    .v-label
      transform-origin: top left

  &__prefix
    padding-right: 0
    padding-left: 4px

  &__suffix
    padding-left: 0
    padding-right: 4px

theme(v-text-field, "v-text-field")
rtl(v-text-field-rtl, "v-text-field")

.v-text-field
  input
    flex: 1 1 auto
    line-height: 20px
    padding: 8px 0 8px
    max-width: 100%
    width: 100%

  .v-input__append-inner
    align-self: flex-start
    display: inline-flex
    margin-left: auto
    margin-top: 4px
    line-height: 1
    padding-left: 4px
    user-select: none

  .v-counter
    white-space: nowrap

  .v-label
    max-width: 90%
    overflow: hidden
    text-overflow: ellipsis
    top: 6px // equal to the margin top of icons
    transform-origin: top left
    white-space: nowrap

    &--active
      max-width: 100%
      transform: translateY(-18px) scale(.75)

  .v-input__slot
    transition: background $primary-transition

    &:before,
    &:after
      bottom: 0
      content: ''
      left: 0
      position: absolute
      transition: $primary-transition
      width: 100%

    &:before
      background-color: transparent
      background-position: bottom
      background-size: 3px 1px
      background-repeat: repeat-x
      height: 1px

    &:after
      background-color: currentColor
      height: 2px
      transform: scaleX(0)

  &__details
    display: flex
    flex: 1 0 auto
    max-width: 100%

  &__prefix,
  &__suffix
    align-self: center

  &__prefix
    padding-right: 4px

  &__suffix
    padding-left: 4px
    white-space: nowrap

  &__slot
    display: flex
    flex: 1 1 auto
    height: 100%
    position: relative

  &--box,
  &--outline
    position: relative

    .v-input__slot
      align-items: flex-start

    input
      cursor: pointer
      margin-top: 24px

    &.v-text-field--single-line
      input
        margin-top: 12px

    .v-label
      top: 18px

      &--active
        transform: translateY(-6px) scale(.75)

    .v-input__slot
      min-height: 56px

  &--box,
  &--enclosed
    .v-input__prepend-outer,
    .v-input__append-inner,
    .v-input__append-outer
      margin-top: 16px

    &:not(.v-text-field--solo)
      .v-label
        cursor: pointer

  &--box
    .v-input__slot,
    input
      cursor: pointer

    .v-input__slot
      border-radius: 4px
      margin-bottom: 4px

      &:before,
      &:after
        border-bottom-left-radius: 4px
        border-bottom-right-radius: 4px

      &:before
        height: 2px

    .v-input__slot,
    .v-text-field__details
      padding: 0 12px

  &--enclosed
    // To better align with box
    &.v-input
      margin-top: 14px

    .v-progress-linear__background
      display: none

    .v-input__control,
    .v-input__slot
      position: static

    .v-input__slot
      margin-bottom: 0 // normally for messages

    .v-text-field__details
      bottom: -18px
      pointer-events: none
      position: absolute
      width: 100%

    .v-input__prepend-outer
      margin-left: 16px

    .v-input__append-outer
      margin-right: 16px

    .v-input__slot
      &:before,
      &:after
        display: none

    .v-input__slot,
    .v-text-field__details
      padding: 0 12px

  &--full-width
    &.v-input
      margin-bottom: 0
      margin-top: 0

    .v-label
      top: calc(50% - 10px)

    .v-input__slot
      padding: 16px

    .v-input__append-inner
      align-self: center
      margin-top: 0

  &--reverse
    input
      text-align: right

    .v-label
      transform-origin: top right

    .v-input__slot,
    .v-text-field__slot
      flex-direction: row-reverse

  &--outline
    border-radius: 4px
    cursor: pointer
    margin-bottom: 16px
    transition: border $primary-transition

    &.v-input--is-focused
      border: 2px solid currentColor
      transition: border $primary-transition

    .v-input__slot
      background: transparent !important

  &.v-text-field--solo,
  &.v-text-field--outline
    .v-input__prepend-outer
      margin-right: 0

    .v-input__append-outer
      margin-left: 0

  &.v-text-field--solo
    align-items: center
    margin: 0
    elevation(2)

    .v-label
      top: calc(50% - 10px)

    .v-input__control
      min-height: 48px
      padding: 0

    .v-text-field__slot
      align-items: center

    .v-input__append-inner
      align-self: center
      margin-top: 0

    .v-input__prepend-outer,
    .v-input__append-outer
      margin-top: 8px
      margin-bottom: 8px

  &.v-input--is-focused
    .v-input__slot:after
      transform: scaleX(1)

  &.v-input--has-state
    .v-input__slot:before
      background-color: currentColor
