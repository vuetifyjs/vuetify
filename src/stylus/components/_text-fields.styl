/** Label */
.input-group--text-field label
  pointer-events: none
  position: absolute
  top: 0
  left: 0
  min-width: 0
  white-space: nowrap
  text-overflow: ellipsis
  overflow: hidden
  text-align: left
  transform: translate3d(0, 0, 0)
  transform-origin: top left
  width: 100%
  
.input-group--text-field.input-group--multi-line:not(.input-group--focused):not(.input-group--dirty) label
  transform: translate3d(0,0,0)


/** Input */
.input-group--text-field input
  font-size: $input-font-size
  flex: 1
  margin: 0
  white-space: nowrap
  text-overflow: ellipsis
  overflow: hidden
  min-width: 0
  height: $input-height
  
  + .icon
    padding: 0 6px
    transition: .3s $transition.ease-in-out

  &:focus
    outline: none
    
  &:disabled
    pointer-events: none

/** Textarea */
.input-group--text-field textarea
  font-size: $input-font-size
  width: 100%
  
  &:focus
    outline: none

/** Counter */
.input-group--text-field
  .input-group__counter
    margin-left: auto

    &--error
      color: $theme.error !important

/** Themes */
.input-group--text-field
  &.input-group--light
    input-group-theme(
      $input-group-light-normal,
      #000,
      $input-group-light-focus
    )

  &.input-group--dark
    input-group-theme(
      $input-group-dark-normal,
      #fff,
      $input-group-dark-focus
    )

/** Input States */
.input-group--text-field
  &.input-group--focused
    label
      color: $theme.primary
      transform: translate3d(0, -18px, 0) scale(.75)

  &.input-group--dirty
    label
     transform: translate3d(0, -18px, 0) scale(.75)
      

/** Types */
.input-group--text-field
  &.input-group--error
    .input-group__details:after
      background-color: $theme.error
    
  &.input-group--prepend-icon
    .input-group__prepend-icon
      align-items: center
      display: flex
      justify-content: flex-start
      flex-basis: 56px
      transition: .3s $transition.fast-in-fast-out
     
    .input-group__details 
      margin-left: 56px
      
      &:before, &:after
        max-width: calc(100% - 56px)

    label
      margin-left: 56px
      
    input
      flex: auto
      
    &.input-group--focused
      .icon
        color: $theme.primary

  &.input-group--single-line      
    label
      transform: translate3d(0,0,0)
      
    &.input-group--dirty
      label
        display: none
        
  &.input-group--required
    label:after
      content: '*'
      
    &.input-group--focused
      label:after
        color: $theme.error
        
  &.input-group--error
    label
      color: $theme.error
      
    .input-group__details:before, .input-group__details:after
      background-color: $theme.error
      
  &.input-group--full-width
    padding: 0 16px

    .input-group__details:before, .input-group__details:after
      display: none