/** Label */
.input-group--text-field label
  pointer-events: none
  position: absolute
  top: 0
  left: 0
  min-width: 0
  white-space: nowrap
  text-overflow: ellipsis
  overflow: hidden
  text-align: left
  transform: translate3d(0, 0, 0)
  transform-origin: top left
  width: 100%

.input-group--text-field.input-group--multi-line:not(.input-group--focused):not(.input-group--dirty) label
  transform: translate3d(0,0,0)


/** Input */
.input-group--text-field input
  box-shadow: none
  font-size: $input-font-size
  flex: 1
  margin: 0
  white-space: nowrap
  text-overflow: ellipsis
  overflow: hidden
  min-width: 0
  height: $input-height

  + .icon
    padding: 0 6px
    transition: .3s $transition.ease-in-out

  &:focus
    outline: none

  &:disabled
    pointer-events: none

/** Textarea */
.input-group--text-field textarea
  font-size: $input-font-size
  flex: 1 1

  &:focus
    outline: none

/** Counter */
.input-group--text-field
  .input-group__counter
    margin-left: auto

    &--error
      color: $theme.error !important

/** Input States */
.input-group--text-field
  &.input-group--placeholder:not(.input-group--focused):not(.input-group--dirty)
    label
      opacity: 0


/** Types */
.input-group--text-field
  // Icons
  &.input-group--prepend-icon
    .input-group__prepend-icon
      align-items: center
      display: flex
      justify-content: flex-start
      min-width: 40px
      transition: .3s $transition.fast-in-fast-out

    .input-group__details
      margin-left: auto

      &:before, &:after
        margin-left: 40px
        max-width: calc(100% - 40px)

    label
      margin-left: 40px

    input
      flex: auto

  &:not(.input-group--single-line)
    &.input-group--focused,
    &:focus
      label
        opacity: 1
        transform: translate3d(0, -18px, 0) scale(.75)

  &.input-group--dirty
    label
      transform: translate3d(0, -18px, 0) scale(.75)

  // Single Line
  &.input-group--single-line
    label
      transform: translate3d(0,0,0)

    &.input-group--dirty
      label
        display: none

  // Full Width
  &.input-group--full-width
    padding: 0 16px

    .input-group__details:before, .input-group__details:after
      display: none
      
  // Solo
  &.input-group--solo
    background: #fff
    height: 46px
    border-radius: $card-border-radius
    padding: 0 16px
    elevation(2)
    
    input
      margin-top: 8px

    label
      top: 8px
      left: 16px
      transform: none !important
    
    &:hover
      elevation(4)

/** Prefix/Suffix */
.input-group--prefix
  &:not(.input-group--focused):not(.input-group--dirty)
    label
      left: 16px

  .input-group--text-field__prefix,
  .input-group--text-field__suffix
    align-items: center
    display: inline-flex
    font-size: 16px
    margin-top: 1px

  .input-group--text-field__prefix
    margin-right: 3px

  .input-group--text-field__suffix
    margin-left: 3px
