$chip-border-radius := 2rem
$chip-font-size := .8rem
$chip-label-border-radius := 0
$chip-icon-font-size := 1.2rem
$chip-padding := 0 $chip-font-size
$chip-outline-background := transparent !important
$chip-outline-color := $grey.base
$chip-min-height := 25px
$chip-small-min-height := 20px
$chip-small-padding := 0 .2rem

// Collapsible
$collapsible-collapse-height := 3rem
$collapsible-transition-height := 0.23s

// Footer
$footer-height := 45px

/** Lists */
$list-left-padding := 16px
$list-right-padding := 16px
$list-top-padding := 8px
$list-bottom-padding := 8px

$list-item-right-margin := 56px
$list-item-left-padding := 72px
$list-item-dense-top-padding := 4px

$list-item-font-size := 16px
$list-item-dense-font-size := 13px
$list-item-font-weight := 500

$list-item-single-height := 48px
$list-item-dense-single-height := 40px
$list-item-avatar-single-height := 56px
$list-item-dense-avatar-single-height := 48px

$list-item-double-height := 72px
$list-item-dense-double-height := 60px

$list-item-triple-height := 88px
$list-item-dense-triple-height := 76px

$list-sub-header-inset-margin := $list-item-right-margin
$list-sub-header-font-weight := 500
$list-sub-header-height-font-size := 14px

$list-title-font-size := 16px
$list-title-font-weight := 500
$list-title-dense-font-weight := 400

$list-sub-title-font-size := 14px
$list-sub-title-font-weight := 400

$list-content-font-size := 15px

$list-group-tile-title-font-weight := 300
$list-group-tile-title-active-font-weight := 500

$list-action-text-font-size := 12px

// Navbar
$navbar-height := 5rem
$navbar-item-padding := 0 1.2rem

// Progress Circular
$progress-circular-rotate-animation := progress-circular-rotate 1.4s linear infinite
$progress-circular-rotate-dash := progress-circular-dash 1.4s ease-in-out infinite
$process-circular-intermediate-svg-transition := all .2s ease-in-out
$progress-circular-underlay-stroke := rgba(#000, 0.1)
$progress-circular-overlay-transition := all .6s ease-in-out

/* Sidebar */

$sidebar-height := 100vh
$sidebar-width := 300px

// Sidebar Item
$sidebar-item-color := #fff
$sidebar-item-height := 50px
$sidebar-item-active-color := #fff
$sidebar-item-active-background-color := $theme.primary
$sidebar-item-hover-background-color := rgba($theme.primary, .4)

// Sidebar Item Header
$sidebar-item-header-padding := .2rem .2rem .2rem 2rem
$sidebar-item-header-color := #fff
$sidebar-item-header-font-size := 90%
$sidebar-item-header-letter-spacing := .1px

// Sidebar Group
$sidebar-group-items-background-color := darken($theme.secondary, 15%)
$sidebar-group-header-active-sidebar-items-border := 1px solid rgba(#fff, .1)
$sidebar-group-header-active-sidebar-item-active-background-color := rgba($theme.primary, .4)

// Slider
$slider-arrow-size := 2rem

// Directives
// ============================================================

// Ripple animation
$ripple-container-color := #fff
$ripple-animation-background := currentColor
$ripple-animation-transition := .5s transform cubic-bezier(.2, .4, .4, .9), .3s opacity cubic-bezier(.2, .4, .4, .1)
$ripple-animation-visible-opacity := .3