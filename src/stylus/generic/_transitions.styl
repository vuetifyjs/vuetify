.carousel-transition
  &-enter
    transform: translate3d(100%, 0, 0)
    
  &-leave, &-leave-to
    position: absolute
    top: 0
    transform: translate3d(-100%, 0, 0)

.carousel-reverse-transition
  &-enter
    transform: translate3d(-100%, 0, 0)
        
  &-leave, &-leave-to
    position: absolute
    top: 0
    transform: translate3d(100%, 0, 0)
    
.modal-transition
  &-enter, &-leave-to
    transform: scale(0.5)
    opacity: 0
    
  &-enter-to, &-leave
    opacity: 1

.modal-bottom-transition 
  &-enter, &-leave-to
    transform: translateY(100%)
    
.tab-transition
  &-enter
    transform: translate(100%, 0)
    
  &-enter-to
    transform: translate(0, 0)
      
  &-leave, &-leave-active
    position: absolute
    top: 0
    
  &-leave-to
    position: absolute
    transform: translate(-100%, 0)

.tab-reverse-transition
  &-enter
    transform: translate(-100%, 0)
        
  &-leave, &-leave-to
    top: 0
    position: absolute
    transform: translate(100%, 0)  

.scale-transition
  &-leave-active
    position: absolute

  &-enter, &-enter-active, &-leave, &-leave-to
    transition: $primary-transition
    
  &-enter, &-leave, &-leave-to
    opacity: 0
    transform: scale(0)

.slide-y-transition
  &-leave-active
    position: absolute

  &-enter-active, &-leave, &-leave-to
    transition: $primary-transition
    
  &-enter, &-leave-to
    opacity: 0
    transform: translateY(-15px)

.slide-y-reverse-transition
  &-leave-active
    position: absolute

  &-enter-active, &-leave, &-leave-to
    transition: $primary-transition
    
  &-enter, &-leave-to
    opacity: 0
    transform: translateY(15px)

.slide-x-transition
  &-leave-active
    position: absolute

  &-enter-active, &-leave, &-leave-to
    transition: $primary-transition
    
  &-enter, &-leave-to
    opacity: 0
    transform: translateX(-15px)

.slide-x-reverse-transition
  &-leave-active
    position: absolute

  &-enter-active, &-leave, &-leave-to
    transition: $primary-transition
    
  &-enter, &-leave-to
    opacity: 0
    transform: translateX(15px)
    
.fade-transition
  &-leave-active
    position: absolute

  &-enter-active, &-leave, &-leave-to
    transition: $primary-transition

  &-enter, &-leave-to
    opacity: 0